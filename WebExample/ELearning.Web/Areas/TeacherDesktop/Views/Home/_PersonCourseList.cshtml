@model IEnumerable<ELearning.ViewModels.TeachingCourse.CoursesVM>
@{
    var entityController = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <span class="mb-2 h3" style="color:dimgray">我创建的课程</span>
            <div class="col-md-5 col-sm-5 col-xs-12 pull-right ">
                <div class="input-group">
                    <span class="input-group-btn">
                        <a asp-area="TeacherDesktop" asp-controller="@entityController" asp-action="CreateOrEdit" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> 新增数据</a>
                    </span>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th width="50px">编号</th>
                        <th width="200px">名称</th>
                        <th>简要说明</th>
                        <th width="100px">编码</th>
                        <th width="210px">数据操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.SortCode</td>
                            <td align="center">
                                <a asp-action="CreateOrEdit" asp-route-id="@item.Id">编辑</a> |
                                <a href="javascript:void(0)" onclick="openDeleteItemModal('deleteItemModal', '@item.Id', '你所选择的数据：@item.Name'+'将被删除，请你确认！')">删除 </a> |
                                <a asp-area="TeacherDesktop" asp-controller="CourseItem" asp-action="CourseItemList" asp-route-id="@item.Id">课程单元</a> |
                                <a asp-area="TeacherDesktop" asp-controller="Home" asp-action="Authorization" asp-route-id="@item.Id">授权管理 </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
