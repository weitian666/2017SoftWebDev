<span class="h5" style="color:dimgray;margin-top:10px"> 待选用户组和用户 </span>
<table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
    <thead>
        <tr>
            <th width="30px"></th>
            <th>用户或角色组</th>
            <th width="60px" class="text-center">
            @*<input type="checkbox" name="" id="" value="" class="" />
            <a href="javascript:void()" onclick="('')"> <i class="fa fa-angle-double-right pull-right"></i> </a>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToBeAuthorizationedItemCollection)
        {
            <tr>
                <td align="center">
                    @if (item.IsUser)
                    {<i class="fa fa-user"></i> }
                    else
                    {<i class="fa fa-users"></i>}
                </td>
                <td> @item.Name </td>
                <td class="text-center">
                    <input type="checkbox" name="" id="" value="" class="" />                             
                    <a href="javascript:void()" onclick="gotoProcessItemToAuthorization('@Model.CourseID','@item.Id','@item.IsUser','true','@Model.AuthorizationType','@tabName')"> <i class="fa fa-arrow-right pull-right"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
