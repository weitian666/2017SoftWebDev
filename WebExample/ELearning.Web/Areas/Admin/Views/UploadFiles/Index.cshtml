@using System
@{
    ViewData["Title"] = "Home Page";
}
@model ELearning.ViewModels.Common.ProfileEditVM

<h1>Profile</h1>
<div class="row">
    <div class="col-md-4">
        Name: @Model.Name
        @if (!String.IsNullOrEmpty(Model.AvatarPath))
        {
            <img src="/uploads/@Model.AvatarPath" class="img-thumbnail"/>
        }
    </div>
</div>
<a asp-controller="UploadFiles" asp-action="AvatarEdit">编辑照片</a>
