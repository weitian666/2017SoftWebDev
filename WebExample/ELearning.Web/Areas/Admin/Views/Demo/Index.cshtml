@model IEnumerable<ELearning.ViewModels.Common.TestVM>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <span class="mb-2 h3" style="color:dimgray">@ViewData["FunctionName"]</span>
                <div class="col-md-5 col-sm-5 col-xs-12 pull-right ">
                    <div class="input-group">
                    <input type="text" class="form-control" placeholder="输入关键词...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">查询</button>
                        <a asp-area="Admin" asp-controller="Demo" asp-action="Create" class="btn btn-default">新增数据</a>
                    </span>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                    <thead>
                        <tr>
                            <th width="50px">序号</th>
                            <th>姓名</th>
                            <th>手机</th>
                            <th>电子邮件</th>
                            <th>工号</th>
                            <th>简要说明</th>
                            <th width="120px">数据操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model) {
                            <tr>
                                <td>@item.OrderNumber</td>
                                <td>@item.Name</td>
                                <td>@item.Mobile</td>
                                <td>@item.Email.</td>
                                <td>@item.SortCode.</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID">编辑</a> |
                                    <a asp-action="Details" asp-route-id="@item.ID">明细</a> |
                                    <a asp-action="IsDelete" asp-route-id="@item.ID">删除</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div>
                    当前数据总量是
                    <nav class=" pull-right" style="margin-top:-20px">
                        <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">前一页</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">后一页</a>
                        </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
